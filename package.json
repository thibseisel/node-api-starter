{
  "name": "node-api-starter",
  "version": "1.0.0",
  "description": "Make it easier to build a REST API with nodejs",
  "private": true,
  "scripts": {
    "build": "npm run build-ts",
    "build-ts": "tsc",
    "debug": "npm run watch",
    "lint": "eslint --ext .ts .",
    "serve": "node --require=\"module-alias/register\" dist/server.js",
    "start": "npm run serve",
    "watch": "concurrently -k -p \"[{name}]\" -n \"typescript,node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon --delay 1 --watch dist/ --inspect=0.0.0.0:9229 --require=\"module-alias/register\" dist/server.js",
    "watch-ts": "tsc --watch",
    "test": "jest --runInBand --detectOpenHandles",
    "test-ci": "npm run test -- --verbose --coverage"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "rest",
    "starter",
    "docker"
  ],
  "author": "Thibault SEISEL",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "lodash": "^4.17.21",
    "luxon": "^1.26.0",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "swagger-ui-express": "^4.1.6",
    "tslib": "^2.2.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/lodash": "^4.14.168",
    "@types/luxon": "^1.26.4",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.5",
    "@types/node": "^14.14.41",
    "@types/supertest": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "concurrently": "^6.0.2",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsdoc": "^32.3.1",
    "eslint-plugin-no-null": "^1.0.2",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "engines": {
    "node": "14.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --concurrent=false"
    }
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown",
    "*.ts": "eslint --fix"
  },
  "_moduleAliases": {
    "@app": "dist"
  }
}
